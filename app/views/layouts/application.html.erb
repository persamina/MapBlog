<!DOCTYPE html>
<html>
<head>
  <title>MapBlog</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <!-- <%= javascript_include_tag "application" %> -->
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="navbar">
      <div class="navbar-inner">
        <h1>Map Blog</h1>
        <div class="nav pull-right">
        <% if current_user %>
          <%= button_to "Sign Out", session_url, method: :delete %>
        <% else %>
          <a href="#signin"><i class="fa fa-sign-in"></i></a>
        <% end %>
        </div>
      </div>
    </div>
    <% if flash[:errors] %>
      <% flash[:errors].each do |error| %>
        <h5> <%= error %> </h5>
      <% end %>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
